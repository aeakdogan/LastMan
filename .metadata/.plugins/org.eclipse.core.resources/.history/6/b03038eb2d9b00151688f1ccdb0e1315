import java.util.ArrayList;

import javax.swing.JFrame;

public class Framework {
	private static JFrame frame;
	
	static int MAIN_MENU_ID = 1;
	
	MainMenu mainMenuContent;
	
	public Framework(JFrame frame){
		Framework.frame = frame;
		frame.setTitle("Last Man");
		frame.setSize(1100,600);
		frame.setLocationRelativeTo(null);
		frame.setResizable(false);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		mainMenuContent = new MainMenu();
		
		frame.setContentPane(mainMenuContent);
		frame.setVisible(true);
	}
	
	public static void switchMenu(int menuID){
		if(menuID == MAIN_MENU_ID){
			frame.setContentPane(mainMenuContent);
		}
		frame.invalidate();
		frame.validate();
	}
}
